<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <RelativeLayout android:id="@+id/fragments_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <fragment android:id="@+id/now_playing_frag"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        class="net.miscjunk.aamp.NowPlayingFragment"/>
    
    </RelativeLayout>
    
  <RelativeLayout android:id="@+id/bottom_menu"
        			android:layout_width="match_parent"
        			android:layout_height="10dp">
      <Button android:id="@+id/now_playing_but"
    	    android:layout_width="0dp"
    	    android:layout_height="match_parent"
    	    android:text="Now Playing"
    	    android:onClick="nowPlayingClicked"/>
      
    	<Button android:id="@+id/playlists_but"
    	    android:layout_width="0dp"
    	    android:layout_height="match_parent"
    	    android:text="Playlists"
    	    android:onClick="playlistsClicked"/>
        
    </RelativeLayout>
</RelativeLayout>
