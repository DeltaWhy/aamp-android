<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <RelativeLayout
        android:id="@+id/fragments_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    
    <fragment
        android:id="@+id/now_playing_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="net.miscjunk.aamp.NowPlayingFragment"/>
    
    </RelativeLayout>
    
  <LinearLayout android:id="@+id/bottom_menu"
        			android:layout_width="match_parent"
        			android:layout_height="wrap_content"
        			android:layout_weight="0"
        			style="?android:attr/buttonBarStyle">

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1" />

    <ImageButton android:id="@+id/prev_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Previous"
        android:src="@android:drawable/ic_media_previous"
        style="?android:attr/buttonBarButtonStyle" />
    <ImageButton android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Play"
        android:src="@android:drawable/ic_media_play"
        style="?android:attr/buttonBarButtonStyle" />
    <ImageButton android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Pause"
        android:src="@android:drawable/ic_media_pause"
        style="?android:attr/buttonBarButtonStyle" />
    <ImageButton android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Next"
        android:src="@android:drawable/ic_media_next"
        style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>
